{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "iosApp/iosApp/Info.plist",
          "package.json",
          "package-lock.json"
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "echo ${nextRelease.version} > .VERSION"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "composeApp/build/outputs/apk/release/solareco-*.apk",
            "label": "Android APK"
          },
          {
            "path": "composeApp/build/outputs/bundle/release/solareco-*.aab",
            "label": "Android App Bundle"
          },
          {
            "path": "build/solareco-*-ios.xcarchive.zip",
            "label": "iOS App Archive"
          }
        ]
      }
    ],
    "semantic-release-export-data"
  ],
  "analyzeCommits": {
    "releaseRules": [
      {
        "type": "refactor",
        "release": "patch"
      },
      {
        "type": "perf",
        "release": "patch"
      }
    ]
  },
  "tagFormat": "${version}",
  "branches": [
    "main",
    "+([0-9])?(.{+([0-9]),x}).x",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "preset": "conventionalcommits",
  "presetConfig": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "feature",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "revert",
        "section": "Reverts"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Styles"
      },
      {
        "type": "chore",
        "section": "Miscellaneous Chores"
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "build",
        "section": "Build System"
      },
      {
        "type": "ci",
        "section": "Continuous Integration"
      }
    ]
  }
}